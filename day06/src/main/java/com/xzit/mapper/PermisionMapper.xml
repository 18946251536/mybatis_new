<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzit.mapper.PermisionMapper">
    <resultMap id="PermisionQuery" type="permision" autoMapping="true">
        <collection property="roles" ofType="role" autoMapping="true">
        </collection>
    </resultMap>
    <select id="selectByRid" resultMap="PermisionQuery" parameterType="int[]">
        select distinct p.*
        from permision p,role_permision rp
        where p.pid=rp.pid
              <foreach collection="array" item="rid" open="and rp.rid in(" close=")" separator=",">
                  #{rid}
              </foreach>
    </select>
</mapper>